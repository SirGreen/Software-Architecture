@{
    ViewData["Title"] = "Patient Management";
}

<link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/libs/aos/aos.css" rel="stylesheet" type="text/css" />

<!-- Breadcrumb -->
<div class="page-title-box d-sm-flex align-items-center justify-content-between">
    <h4 class="mb-sm-0">Patient Management</h4>
    <div class="page-title-right">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
            <li class="breadcrumb-item active">Patient Management</li>
        </ol>
    </div>
</div>

<!-- Main content -->
<div class="row" data-aos="fade-up">
    <div class="col-xl-12">
        <div class="card" id="patientList">
            <div class="card-header border-0 rounded">
                <div class="row g-2">
                    <div class="col-xl-3">
                        <div class="search-box">
                            <input type="text" class="form-control search" placeholder="Search for patient...">
                            <i class="ri-search-line search-icon"></i>
                        </div>
                    </div>
                    <div class="col-lg-auto ms-auto">
                        <div class="hstack gap-2">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#patient-form-modal">
                                <i class="ri-add-line align-bottom me-1"></i> Add Patient
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body pt-0">
                <div>
                    <div class="table-responsive table-card mb-3">
                        <table class="table align-middle table-nowrap mb-0" id="patient-table">
                            <thead class="table-light">
                                <tr>
                                    <th class="sort" data-sort="id" style="width: 80px;">ID</th>
                                    <th class="sort" data-sort="name">Name</th>
                                    <th class="sort" data-sort="gender">Gender</th>
                                    <th class="sort" data-sort="email">Email</th>
                                    <th class="sort" data-sort="phone">Phone</th>
                                    <th style="width: 150px;">Action</th>
                                </tr>
                            </thead>
                            <tbody class="list" id="patient-table-body">
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <div class="d-flex align-items-center justify-content-center py-4">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                            <span class="ms-2">Loading patients...</span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center py-4">
                                <div class="avatar-md mx-auto mb-4">
                                    <div class="avatar-title bg-light text-primary rounded-circle fs-24">
                                        <i class="ri-user-search-line"></i>
                                    </div>
                                </div>
                                <h5 class="mt-2">No Patients Found</h5>
                                <p class="text-muted mb-0">We couldn't find any patients matching your search criteria.</p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mt-3">
                        <div class="pagination-wrap hstack gap-2">
                            <ul class="pagination listjs-pagination mb-0"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Patient Form Modal -->
<div class="modal fade" id="patient-form-modal" tabindex="-1" aria-labelledby="patient-form-modal-label" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0">
            <div class="modal-header p-4 pb-0">
                <h5 class="modal-title" id="form-title">Create Patient</h5>
                <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form class="needs-validation" novalidate id="patient-form-element">
                    <input type="hidden" id="patient-id">
                    <div class="row g-3">
                        <div class="col-lg-6">
                            <div class="position-relative mb-3">
                                <label for="patient-name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="patient-name" placeholder="Enter full name" required>
                                <div class="invalid-feedback">
                                    Please enter a name.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="position-relative mb-3">
                                <label for="patient-email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="patient-email" placeholder="Enter email address" required>
                                <div class="invalid-feedback">
                                    Please enter a valid email.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="position-relative mb-3">
                                <label for="patient-dob" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="patient-dob" required>
                                <div class="invalid-feedback">
                                    Please provide date of birth.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="position-relative mb-3">
                                <label for="patient-phone" class="form-label">Phone Number</label>
                                <input type="text" class="form-control" id="patient-phone" placeholder="Enter phone number" required>
                                <div class="invalid-feedback">
                                    Please enter a phone number.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="position-relative mb-3">
                                <label for="patient-gender" class="form-label">Gender</label>
                                <select class="form-select" id="patient-gender" required>
                                    <option value="true">Male</option>
                                    <option value="false">Female</option>
                                </select>
                                <div class="invalid-feedback">
                                    Please select gender.
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="position-relative mb-3">
                                <label for="patient-insurance" class="form-label">Health Insurance ID</label>
                                <input type="text" class="form-control" id="patient-insurance" placeholder="Enter health insurance ID">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="position-relative mb-3">
                                <label for="patient-address" class="form-label">Address</label>
                                <textarea class="form-control" id="patient-address" rows="3" placeholder="Enter address" required></textarea>
                                <div class="invalid-feedback">
                                    Please enter an address.
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="hstack gap-2 justify-content-end">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="add-btn" onclick="submitPatientForm()"><i class="ri-save-line align-bottom me-1"></i> Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade zoomIn" id="delete-confirmation-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="delete-modal-close"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px"></lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Are you sure?</h4>
                        <p class="text-muted mx-4 mb-0">Are you sure you want to delete this patient record?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn w-sm btn-danger" id="delete-patient-btn">Yes, Delete It!</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/libs/flatpickr.min.js"></script>
    <script src="~/assets/libs/aos/aos.js"></script>
    <script src="~/js/patient-management.js"></script>

    <script>
        // Fix for pagination links jumping to top of page
        document.addEventListener('click', function(e) {
            // Check if the clicked element is a pagination link
            if (e.target.closest('.listjs-pagination a')) {
                e.preventDefault(); // Prevent default link behavior
            }
        }, true);
    </script>
}